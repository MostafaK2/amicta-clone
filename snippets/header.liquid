<header>
	<div style = "background-color: black; height:30px">rotating stuff</div>
	<div>
		<style>
			@import url('https://fonts.googleapis.com/css2?family=Jost:wght@400;500&display=swap');
			.topbar {
				display: flex;
				border-bottom: 1px solid #dadada;
				height: 90px;
				justify-content: space-between;
				align-items: center;
				padding: 0px 50px 0px 50px;
				gap:15px
			}
			.searchbar {
				display: flex;
				border: 1px solid #dadada;
				border-radius: 10px;
				padding: 5px 10px 5px 10px;
				width: 40%;
				height: 30px;
				justify-content: space-between;
				max-width: 745px;
				min-width: 450px;
				
			}
			  
			.searchbar input {
				border: none;
				outline: none;
				
			}
			.searchbar div {
				display: flex;
				align-items: center;
				padding: 10px;
				cursor: pointer;
			}
			
			.signlikecart {
				align-items: center;
				display: flex;
				gap: 10px;
			}
			.signlikecart button {
				border: none;
				outline: none;
				background-color: white;
				cursor: pointer;
				font-size: 15px;
				font-weight: bold;
				white-space: nowrap;
			}
			{% comment %} this part is for the bottom bar in the header   {% endcomment %}
			.bottombar{
				border-bottom: 1px solid #dadada;
				padding: 10px;
			}
			.header-bb-ul-container{
				display:flex;
				padding: 0 50px;
				justify-content:center;
				align-items: center;
				gap: 80px;
				list-style-type: none;
			}
			.header-bb-ul-container a{
				font-size: 23px; 
				font-weight:400;
				text-decoration:none;
				color: black;
				font-family: 'Jost', sans-serif;
				white-space: nowrap;
			}
			.menu-h{
				display:none
			}

			@media screen and (max-width:850px){
				.searchbar{
					display:none;
				}

				.menu-h{
					display:flex;
					height:15px;
					width:15px;
				}

				.topbar{
					padding: 0px 20px 0px 20px;
				}

				.header-bb-ul-container a{
					font-size: 14px;
				}
				
			}
		</style>
		
		<div class="topbar">
			<a class="menu-h" href=""><img src="{{'burgermenu.png' | asset_url}}"/></a>
			<div style="cursor:pointer;">
				<a href="/">
					<img src="{{'logo.jpg' | asset_url}}" height="48px" width="117px"/>
				</a>
			</div>
			<div class="searchbar">
				<input class= "searchbarinput" placeholder = "FIND YOUR FAVOURATES"/>
				<div class = "searchbardiv">
					<img 
						alt="searchicon" 
						src="{{'search-icon.png' | asset_url}}" 
						height="30px" 
						width = "30px"
					/>
				</div>
			</div>

			<div class="signlikecart">
				<button>Sign in</button>
				<a href="/none">
					<img alt="hearticon" src="{{'heart.png' | asset_url}}" height="20px" width="20px"/>
				</a>
				<a href="/cart">
					<img alt="cart" src="{{'shoppingbag.png' | asset_url}}" height="20px" width="20px"/>
				</a>
			</div>
		</div>

		<div class="bottombar">
			<ul class="header-bb-ul-container">
				{% for link in linklists.header-menu.links -%}
					<a href="{{ link.url }}" class="my-link">{{ link.title }}</a>
				{%- endfor %}
			</ul>
		</div>
	<div>
</header>