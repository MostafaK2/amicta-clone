		<style>
			
			.everything{
				margin: auto; 
				display:flex; 
				flex-direction: column;
				gap: 100px;
			}
			{% comment %} end of trending css {% endcomment %}
			{% comment %} this part is Shop By Vendor CSS  {% endcomment %}
			.middle-part-container{
				max-width:1440px;
				margin: auto;
			}
			
			.middle-part-container h2{
				text-align: center;
				padding-bottom: 100px;
				margin:0;
			}
	
			.middle-part-child{
				display: flex; 
				justify-content: center;
				height: 480px;
				gap:20px;
				margin:auto;
				padding: 0px 120px 0 120px;
			}
			

			.ven{
				height:100%;
				width:25%;

				display: flex;
				flex-direction: column;
				text-align: center;
				cursor:pointer;
				position:relative;
			}
			.ven img{
				width:100%;
				height:100%; 
				object-fit: cover;
			}

			
			
			.position-ven{
				position: absolute;
				top:65%;
				left:50%;
				transform: translate(-50%, -50%);
			}
			
			.ven:hover{
				filter: brightness(80%);
			}
			.textheader-sv{
				font-family: "Berkshire Swash", cursive;
				color: white;
				margin:0;
				margin-bottom: 15%;
				font-size: 2.5vw;
			}
			

			.button-home-settings {
				border-radius: 5px;
				padding: 10px;
				box-shadow: -2px 2px 4px rgb(53, 53, 53);
				outline: none;
				border: none;
				cursor: pointer;
				font-size: 17px;
			}

			.button-home-settings.ven-btn{
				padding: 15px;
				box-shadow:none;
				width: 150px;
			}
			{% comment %} end of Shop By Vendor CSS  {% endcomment %}
			{% comment %} start of shop by collections {% endcomment %}
			.position-sb {
				position: absolute;
				left:50%;
				top:75%;	
				transform: translate(-50%, -50%);
			}

			.position-salwar{
				position: absolute;
				left:50%;
				top:69%;	
				transform: translate(-50%, -50%);
			}
			
			.text-bottom-sk{
				font-family: "Jost", sans-serif;
				font-size: 1.3vw;
				color: white;
				font-weight:400;
				white-space: nowrap

			}

			

			@media screen and (max-width:900px){
				.everything{
					gap:50px;
				}
				.middle-part-child{
					display:grid;
					grid-template-columns: 1fr 1fr;
					grid-template-rows: 1fr 1fr;
					height:960px;

				}
				.middle-part-child{
					padding-bottom:50px;
				}
				.ven{
					height:100%;
					width:100%;
				}

				.textheader-sv{
					font-size:4.5vw;
				}
				.text-bottom-sk{
					font-size: 2.6vw;

				}

			@media screen and (max-width:650px){
				.everything{
					gap:50px;
				}
				.middle-part-child{
					padding:0 25px 0 25px;
					display:grid;
					grid-template-columns: 1fr 1fr;
					grid-template-rows: 0.5fr 0.5fr;
					height:800px;

				}
				.middle-part-child{
					padding-bottom:50px;
				}
				.ven{
					height:100%;
					width:100%;
				}

				.textheader-sv{
					font-size:4.5vw;
				}
				.text-bottom-sk{
					font-size: 2.6vw;

				}
				
			
			}
	
			}
			
