            display: flex;
            flex-direction: column;
            gap: 0px;
        }
        .product-header {
            display:flex;
            flex-direction: column;
            border-bottom: 1px solid grey;
            gap:20px;
        }

        .product-header h2, p{
            font-family: 'Fost', sans-serif;
            margin:0;
        }

        #est-delivery{
            display:flex;
            gap:10px;
            align-items: center;
            
        }
        #est-delivery img{
            height:50px;
            width:50px
        }
        #est-delivery p{
            padding:0;
        }

        .product-compare{
            color:#C6C6C6; 
            text-decoration: Line-through;
            font-size: 18px;
        }

        .product-price{
