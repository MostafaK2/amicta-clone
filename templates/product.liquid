            border: 2px black solid;
        }
        #buy-it-now:hover{
            background: black;
        }
        #buy-it-now{
            padding: 15px;
            width: 50%;
            border: 2px black solid;
            border-radius: 5px;
            font-size: 17px;
            font-family: 'Jost', sans-serif;
            cursor: pointer;

            background: rgb(128, 62, 95);
            color: white;
