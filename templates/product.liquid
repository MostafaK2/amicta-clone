        }
        {% comment %} #sale-circle{
            font-size: 18px;
            color:white;
            background: #00308F;
            padding-bottom:0;
            padding: 5px;
            border-radius: 50px;
            align-items:center;
            justify-content:center;
        } {% endcomment %}

        {% comment %} styling of product options {% endcomment %}
        

        .product-option fieldset{
            display:flex;
            flex-direction: column;
            gap:10px;
            border: none;
            border-bottom: 1px solid grey;
            padding: 20px 0 20px 0;
        }

       

